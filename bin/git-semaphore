#!/usr/bin/env ruby

$LOAD_PATH.unshift File.join(File.dirname(__FILE__), '..', 'lib')

begin
  require 'git-semaphore'
rescue LoadError
  require 'rubygems'
  require 'git-semaphore'
end

options = Trollop::options do
  version "git-semaphore v0.0.1 Copyright (c) 2012 Peter Vandenberk"

  banner <<-EOS
Usage: git-semaphore [options]

v0.0.1

Options:
EOS
end

fail "Coming soon!"

# That's all, Folks!
